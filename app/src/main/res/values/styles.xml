<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@color/appBackground</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_secondary">
        <item name="android:textSize">@dimen/card_context_size_12sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="card_text_secondary_info" parent="text_secondary">
        <item name="android:padding">@dimen/activity_margin</item>
        <item name="android:gravity">center|left</item>
    </style>

</resources>
